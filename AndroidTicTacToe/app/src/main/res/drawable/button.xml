<!-- res/drawable/blank_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#60000000" /> <!-- 60 = 37.5% de opacidad -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Figura principal -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="4dp"> <!-- Un poco más grande abajo para dar efecto de elevación -->
        <shape android:shape="rectangle">
            <solid android:color="#307176" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>